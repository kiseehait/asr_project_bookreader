
public class Controller {
	// window
	private Frame frame;
	
	
	// sample data
	private String[] sampleBookPage = {
			// 0:Cover
			"",
			
			// 1:Contents
			"",
			
			// 2:Preface
			"",
			
			// 3:Appendix
			"",
			
			// 4:Reference
			"",
			
			// 5:Index
			"",
			
			// 6:Back Cover
			"",
			
			// 7:...
	};
	
	private String[][] sampleBookContent = {
			// 0:Chapter 1
			{
				// 0:Page 1
				"",
				
				
			},
			
			// 1:Chapter 2
			{
				
			},
	};
	
	
	// constructor
	public Controller(Frame frame) {
		this.frame = frame;
	}
	
	
	// start or stop reading
	public void startReading() {
		frame.setReading();
	}
	
	public void stopReading() {
		frame.setNotReading();
	}
	
}
