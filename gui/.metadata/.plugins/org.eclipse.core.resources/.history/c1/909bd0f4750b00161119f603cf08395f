
public class Controller {
	// window
	private Frame frame;
	
	
	// controller variables 
	private int currentChapter = 0;
	private int currentPage = 0;

	
	// sample data
	private String[][] sampleBook = {
			// 0:Front Content
			{
				// 0:Cover
				"",
				
				// 1:Preface
				"",
				
				// 2:Contents
				""
			},
			
			// 1:Chapter 1
			{
				// 0:Begin Chapter Page
				"",
				
				
			},
			
			// 2:Chapter 2
			{
				
			},
			
			// 3:Chapter 3
			{
				
			},
			
			// 4:Chapter 4
			{
				
			},
			
			// 5:Chapter 5
			{
				
			},
			
			// 6:Chapter 6
			{
				
			},
			
			// 7:Chapter 7
			{
				
			},
			
			// 8:Chapter 8
			{
				
			},
			
			// 9:Chapter 9
			{
				
			},
			
			// 10:Chapter 10
			{
				
			},
			
			// 11:Chapter 11
			{
				
			},
			
			// 12:Chapter 12
			{
				
			},
			
			// 13:Back Content
			{
				// 0:Appendix
				"",
				
				// 1:Index
				"",
				
				// 2:Reference
				"",
				
				// 3:Back Cover
				""
			}
	};
	
	
	// constructor
	public Controller(Frame frame) {
		this.frame = frame;
	}
	
	
	// start or stop reading
	public void startReading() {
		frame.setReading();
	}
	
	public void stopReading() {
		frame.setNotReading();
	}
	
	
	// next or previous page
	public void nextPage() {
		currentPage++;
		
		if (currentPage >= sampleBook[currentChapter].length) {
			currentPage = 0;
			
			nextChapter();
		}
	}
	
	
	// next or previous chapter
	public void nextChapter() {
		currentChapter++;
		
		if (currentChapter >= sampleBook.length) {
			goToBackCover();
		}
	}
	
	public void previousChapter() {
		currentChapter--;
		
		if (currentChapter < 0) {
			goToFrontCover();
		}
	}
	

	// go to ...
	public void goToFrontCover() {
		currentChapter = 0;
		currentPage = 0;
	}
	
	public void goToBackCover() {
		currentChapter = 13;
		currentPage = 3;
	}
	
}
